FROM golang:1.22-alpine

WORKDIR /app

# Install air for hot reload
RUN go install github.com/cosmtrek/air@latest

# Install dependencies
RUN apk add --no-cache git

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY *.go ./

# Create logs directory
RUN mkdir -p /logs

# Expose port
EXPOSE 3001

# Run with air for hot reload
CMD ["air", "-c", ".air.toml"]